- answers.each do |answer|

  .answer id="answer-#{answer.id}"
    .col-md-1.center
      = render "answers/answer_points", answer:answer

    .col-md-8
      .title
        = link_to wrap(answer.question.title), question_path(answer.question)
      .contents
        = truncate(answer.contents, length: 80)
      .link
        = link_to 'link to this answer', question_url(answer.question, anchor: "answer-#{answer.id}")

    .col-md-3
      .details.align-right
        = render "answers/details", answer: answer
          br
          '  by
          = link_to answer.user, user_path(answer.user)
